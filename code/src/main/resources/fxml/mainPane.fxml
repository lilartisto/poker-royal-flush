<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poker.client.controller.GameMenuController">
   <center>
      <Canvas fx:id="canvas" height="500.0" width="1150.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="foldButton" mnemonicParsing="false" onAction="#foldButtonClicked" prefHeight="40.0" prefWidth="100.0" text="Fold">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="checkButton" mnemonicParsing="false" onAction="#checkButtonClicked" prefHeight="40.0" prefWidth="100.0" text="Check">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="callButton" mnemonicParsing="false" onAction="#callButtonClicked" prefHeight="40.0" prefWidth="100.0" text="Call">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </Button>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Slider fx:id="raiseSlider" onMouseDragged="#sliderMoved" />
                  <Text fx:id="raiseText" strokeType="OUTSIDE" strokeWidth="0.0" text="1 $">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Text>
               </children>
               <HBox.margin>
                  <Insets left="70.0" right="5.0" />
               </HBox.margin>
            </VBox>
            <Button fx:id="raiseButton" mnemonicParsing="false" onAction="#raiseButtonClicked" prefHeight="40.0" prefWidth="100.0" text="Raise">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
   </bottom>
</BorderPane>
